@model IEnumerable<NewsPortal.ViewModels.UserViewModel>

@{
    ViewBag.Title = "Users ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Dashboard", "Admin")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active"> <a href="@Url.Action("Users", "Admin")"></a>Users</li>

    </ol>

    <div class="panel-body">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                User Details
                @if (Model != null)
                {
                    <a href="@Url.Action("AddUser", "Admin")" class="btn btn-info pull-right fa fa-plus">Add New</a>
                }
            </div>
            <table class="table table-hover table-bordered table-condensed" id="UsersWithRoles">
                <thead>
                    <tr>
                        <td><b>Id</b></td>
                        <td><b>Username</b></td>
                     


                        <th>Action</th>
                    </tr>
                </thead>
                @foreach (var user in Model)
                {
            <tr>
                <td>@user.UserId</td>
                <td>@user.Username</td>
             


                <td>

                    @Html.ActionLink("Edit", "EditUser", new { id = user.UserId }, new { @class = "btn btn-primary btn-sm glyphicon glyphicon-edit  pull-left fa fa-eye", @style = "background-color:orange;border:none;height:30px", @title = "Edit" })

                    @Html.ActionLink("Details", "DetailsUser", new { id = user.UserId }, new { @class = "btn btn-primary btn-sm glyphicon glyphicon-details fas fa-info-circle", @title = "Details", @style = "border:none;height:30px" })
                    @Html.ActionLink("Delete", "DeleteUser", new { id = user.UserId }, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-remove fa fa-trash", @title = "Delete", @style = "border:none;height:30px" })


                </td>
            </tr>

                }
            </table>
        </div>

      
    </div>
    </div>

@section scripts{
    <script>

        $(function () {
            $('#UsersWithRoles').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": true
            });
        });
    </script>
}  