@model NewsPortal.Models.News

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 style="color: red;font-family:'Agency FB';padding-left:20px">Edit News</h2>


@using (Html.BeginForm())
{
