@model IEnumerable<NewsPortal.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Dashboard", "Admin")">Dashboard</a>
        </li>
        <li class="breadcrumb-item active"> <a href="@Url.Action("Users", "Admin")"></a>Users</li>

    </ol>

    <div class="panel-body">
        <div class="card mb-3">
            <div class="card-header">
                <i class="fas fa-table"></i>
                User Details
                @if (Model != null)
                {
                    <a href="@Url.Action("Create", "User")" class="btn btn-info pull-right fa fa-plus">Add New</a>
                }
            </div>
            <table class="table table-hover table-bordered table-condensed" id="UsersWithRoles">
                <thead>
                    <tr>
                        <td><b>Id</b></td>
                        <td><b>Username</b></td>



                        <th>Action</th>
                    </tr>
                </thead>
                    @foreach (var item in Model)
                    {

            <tr>
                <td> @Html.DisplayFor(modelItem => item.Id) </td>
                <td> @Html.DisplayFor(modelItem => item.UserName) </td>

                <td>

                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-sm glyphicon glyphicon-details  pull-left fa fa-eye", @style = "background-color:orange;border:none;height:30px", @title = "Edit" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-remove fa fa-trash", @title = "Delete", @style = "border:none;height:30px" })

                </td>
            </tr>

                    }
            </table>

